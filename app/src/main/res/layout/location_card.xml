<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@android:color/white"
    android:layout_marginBottom="2dp">
    <ImageView
        android:layout_marginTop="15dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/rental"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:textStyle="bold"
            android:id="@+id/motif"
            android:layout_margin="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Motif : rali"/>

        <TextView
            android:id="@+id/date"
            android:layout_margin="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data : Mon, 28 Sep 2020 20:42:26 GMT"/>

        <TextView
            android:textStyle="italic"
            android:layout_marginLeft="10dp"
            android:id="@+id/model"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Model : Humer H3"/>
        <TextView
            android:textStyle="italic"
            android:id="@+id/limite_de_kilometrage"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="limite de kilometrage : 159 km"/>
        <TextView
            android:id="@+id/conditions_en_matiere_de_carburant"
            android:layout_marginLeft="10dp"
            android:textStyle="italic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="conditions en matiere de carburant : Full a la restitution"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"/>


    </LinearLayout>

</LinearLayout>